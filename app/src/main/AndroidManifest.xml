<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.materialdesigndemo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DrawerLayoutActivity"
            android:label="Material Design">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="DrawerLayoutActivity"/>
        <activity android:name=".BlogActivity" android:theme="@style/BlogActivityTheme"/>
        <activity android:name=".TabLayoutActivity" android:label="TabLayout"/>
    </application>

</manifest>